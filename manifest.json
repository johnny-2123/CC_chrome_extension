{
  "name": "CC extension",
  "description": "Case Search Helper",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "va-case-search.html",
    "default_icon": "favicon-32x32.png",
    "default_title": "Click to show an alert"
  },
  "content_scripts": [
    {
      "matches": [
        "https://eapps.courts.state.va.us/*"
      ],
      "js": [
        "va-content-script.js"
      ]
    },
    {
      "matches": [
        "https://casesearch.courts.state.md.us/*"
      ],
      "js": [
        "md-content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation"
  ]
}
