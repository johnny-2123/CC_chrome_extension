{
  "name": "Crim Search",
  "description": "Crim Search Helper",
  "version": "1.02",
  "manifest_version": 3,
  "action": {
    "default_popup": "va-case-search.html",
    "default_icon": "favicon-32x32.png",
    "default_title": "Click to show an alert"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-48x48.png",
    "128": "favicon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://eapps.courts.state.va.us/*"
      ],
      "js": [
        "va-content-script.js"
      ]
    },
    {
      "matches": [
        "https://casesearch.courts.state.md.us/*"
      ],
      "js": [
        "md-content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ]
}
